@model DrinkDatabase.Models.DrinkIngredient
<div class="DrinkIngredient row">
    @Html.Hidden("DrinkIngredients.index", Model.ID)
    @Html.Hidden("DrinkIngredients[" + Model.ID + "].ID", Model.ID)
    @Html.Hidden("DrinkIngredients[" + Model.ID + "].DrinkID", Model.DrinkID)
    @Html.Hidden("DrinkIngredients[" + Model.ID + "].DrinkIngredientID", Model.ID)
    <div class="col-md-3">
        @Html.EditorFor(model => model.Brand, null, "DrinkIngredients[" + Model.ID + "].Brand", new { htmlAttributes = new { @class = "form-control autosave-delayed" } })
        @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-3">
        @Html.DropDownList("DrinkIngredients[" + Model.ID + "].ingredientID", null, htmlAttributes: new { @class = "form-control autosave-delayed-instant" })
    </div>

    <div class="col-md-3">
        @Html.EditorFor(model => model.Amount, null, "DrinkIngredients[" + Model.ID + "].Amount", new {htmlAttributes = new { @class = "form-control autosave-delayed" }})
        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-1">
        @{
            Html.Hidden("DeleteDrinkIngredients.index", Model.ID);
            var cbName="DeleteDrinkIngredients[" + Model.ID + "].Value";
            @:<input type="checkbox" name=@cbName />
        }
    </div>
</div>
@Scripts.Render("~/bundles/lessRedundant")
